<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="eventLogger" class="com.yet.spring.core.loggers.ConsoleEventLogger"/>

    <bean id="fileEventLogger" class="com.yet.spring.core.loggers.FileEventLogger"
          init-method="init">
        <constructor-arg value="e:\log-result.txt"/>
    </bean>

    <bean id="cacheFileEventLogger" class="com.yet.spring.core.loggers.CacheFileEventLogger"
          destroy-method="destroy"
          init-method="init">
        <constructor-arg index="0" value="e:\log-result.txt"/>
        <constructor-arg index="1" value="5"/>
    </bean>
</beans>